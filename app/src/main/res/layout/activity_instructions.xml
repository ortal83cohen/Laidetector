<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal" android:padding="16dp"
    android:layout_height="match_parent">

    <TextView
        android:text="You can prank your friends with this app very easily.\nWhile clicking on the fingerprint button: \ncover the camera to achieve true result, or uncover the camera to achieve false result."
        android:layout_width="wrap_content" android:textSize="20sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="100dp"
        android:text="*note, by clicking on continue you will never see these instructions again."
        android:layout_width="wrap_content" android:textSize="20sp"  android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginTop="100dp"
        android:id="@+id/continue_button"
android:src="@drawable/ic_continue"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>